{
  "$schema": "http://json-schema.org/schema#",
  "self": {
    "vendor": "com.nordstrom",
    "name": "retail-stream-ingress",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "type": "object",
  "properties": {
    "schema":      { "type": "string", "format": "uri" },
    "followsFrom": { "type": "string", "pattern": "^shardId-\\d{12}:\\d{56}$" },
    "origin":      { "type": "string", "pattern": "^([\\w-. ]{1,128}\\/){3}[\\w-. ]{1,128}$" },
    "timeOrigin":  { "type": "string", "format": "date-time" },
    "data": {
      "type": "object",
      "properties": {
        "schema":  { "type": "string", "format": "uri" }
      },
      "required": [
        "schema"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "schema",
    "origin",
    "timeOrigin",
    "data"
  ],
  "additionalProperties": false
}
