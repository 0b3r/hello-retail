{
  "$schema": "http://json-schema.org/schema#",
  "self": {
    "vendor": "com.nordstrom",
    "name": "user-info/add-role",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "type": "object",
  "properties": {
    "schema": { "type": "string", "format": "uri" },
    "id":     { "type": "string", "pattern": "^[\\w-. ]{1,128}$" },
    "role":   { "type": "string", "pattern": "^photographer|merchant$" }
