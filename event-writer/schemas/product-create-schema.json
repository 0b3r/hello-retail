{
  "$schema": "http://json-schema.org/schema#",
  "self": {
    "vendor": "com.nordstrom",
    "name": "product/create",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "type": "object",
  "properties": {
    "schema":       { "type": "string", "format": "uri" },
    "id":           { "type": "string", "pattern": "^\\d{1,64}$" },
    "brand":        { "type": "string", "pattern": "^.{1,256}$" },
    "name":         { "type": "string", "pattern": "^.{1,256}$" },
    "description":  { "type": "string", "pattern": "^.{1,1024}$" },
    "category":     { "type": "string", "pattern": "^.{1,256}$" }
  },
  "required": [
    "schema",
    "id",
    "brand",
    "name",
    "description",
    "category"
  ],
  "additionalProperties": false
}
